# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
# OPENAI_API_KEY=your_openai_api_key  # Uncomment if using OpenAI

# LLM Settings
LLM_PROVIDER=anthropic  # or openai
LLM_MODEL=claude-3-haiku-20240307  # or gpt-4o-mini
BATCH_SIZE=5
PROCESSING_DELAY=2

# Database
DATABASE_PATH=./data/papers.db

# Email Settings
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_password
SENDER_EMAIL=your_email@example.com
RECIPIENT_EMAILS=recipient1@example.com,recipient2@example.com
MIN_RELEVANCE_SCORE=5

# Schedule Settings (24-hour format)
COLLECTION_SCHEDULE=02:00
PROCESSING_SCHEDULE=03:00
DIGEST_SCHEDULE=08:00

# Run settings
LOG_LEVEL=INFO
RUN_IMMEDIATE=false
